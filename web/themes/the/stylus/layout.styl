@require 'vars'

.layout-container
  display inherit
  margin-bottom 50px

  .layout__region
    overflow hidden

  header #site-logo
    padding 5px 0 0 10px

  .breadcrumb
    padding 0 10px


.layout--onecol
  .layout__region--content
    .block
      padding 0 10px

    .block + .block
      margin-top 7px

      &.block-views-blockpager-block-4
        margin-top 0

    .block-field-blocknodeexhibitionfield-artworks
      padding 0

      .navigation
        margin-bottom 10px

    .entity-pager *, .glide__arrows.navigation *
      color $color_grey

    .entity-pager
      .entity-pager-list
        text-align right