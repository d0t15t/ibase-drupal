@require 'vars'
@require 'mq'

.layout-container
  max-width 1280px
  width 100%
  display inherit
  margin-bottom 50px

  .layout__region
    overflow hidden

  .breadcrumb
    padding 0 10px


@media $mq_up_xl
  .layout-container
    margin 30px auto 100px


.layout
  .layout__region
    .block + .block
      margin-top 5px

      &.block-views-blockpager-block-4
        margin-top 0


  .layout__region--content
    .block
      padding 0 10px


// Exhibitions.
    .block-field-blocknodeexhibitionfield-artworks
      padding 0

      .navigation
        margin-bottom 10px
        padding-left 10px

    .entity-pager *, .glide__arrows.navigation *
      color $color_grey
      margin-left 5px

    .entity-pager
      .entity-pager-list
        text-align right

    .glide__arrows.navigation
      text-align right
      padding-bottom 10px

    .node--view-mode-slider
      .field--name-field-images
        img
          max-width 100%
          height auto

// General layout.
@media $mq_up_lxl
  .layout--twocol-section
    .layout__region--first
        padding 0 20px 0 0

// Exhibitions overview
.view-exhibitions

  .glide__arrows.navigation
    padding-bottom 10px
    text-align right

  .block-field-blocknodeexhibitionfield-image > .field
    margin-top 20px

    @media $mq_up_lxl
      margin-top 0



