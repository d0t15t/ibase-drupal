@require 'vars'
@require 'mq'

.layout-container
  display inherit

  > *:not(footer)
    max-width $max_width
    width 100%

  .layout__region
    overflow hidden

  .breadcrumb
    padding 0 10px

@media $mq_up_xl
  .layout-container > *:not(footer)
    margin 0 auto
    //margin 30px auto 100px


.layout
  .layout__region
    .block + .block
      margin-top 5px

      &.block-views-blockpager-block-4
        margin-top 0


  .layout__region--content
    .block
      padding 0 10px


// Exhibitions.
    .block-field-blocknodeexhibitionfield-artworks
      padding 0

      .navigation
        margin-bottom 10px
        padding-left 10px

    .entity-pager *, .glide__arrows.navigation *
      color $color_grey
      margin-left 5px

    .entity-pager
      .entity-pager-list
        text-align right

    .glide__arrows.navigation
      text-align right
      padding-bottom 10px

    .node--view-mode-slider
      .field--name-field-images
        img
          max-width 100%
          height auto

// General layout.
@media $mq_up_lxl
  .layout--twocol-section
    .layout__region--first
        padding 0 20px 0 0

// Exhibitions overview
.view-exhibitions

  .glide__arrows.navigation
    padding-bottom 10px
    text-align right

  .block-field-blocknodeexhibitionfield-image > .field
    margin-top 20px

    @media $mq_up_lxl
      margin-top 0

// Artwork page
.node--type-artwork.node--view-mode-full
  .node__content
    .layout__region
      .block-field-blocknodeartworkfield-images
          .field--name-field-images
            img
                max-width 100%
                height auto
// Artists
#block-the-content
  .view-artists
    .view-content
      ul.cards
        padding 0 !important
        margin 0 !important
      //margin-bottom 20px
      //width 100%


// Projects
.padded-content
  > *
    max-width 1090px
    margin 0 auto

.no-list-style
  list-style none
  margin unset
  padding unset

.basic-grid
  @extend .no-list-style
  display flex
  gap 20px
  flex-wrap wrap
  justify-content center

.border-grid
  @extend .basic-grid

  > *
    border 1px solid black