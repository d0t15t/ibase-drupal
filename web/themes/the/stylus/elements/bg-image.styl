@require 'vars'

.bg-image
  height: 100%
  min-height: 100%
  display: flex
  flex-direction: column
  position: relative;

  > *
    display: flex
    flex-direction: column
    justify-content: center

  .box-display
    z-index: 1
    width: 100%
    border-top: 1px solid

    @media (min-width: $mobile-breakpoint)
      border none
      width $sidebar_width
      position: absolute;
      top 50px
      left 50px

    .box-display--inner
      background-color: white
      padding: $spacing_layout--sm

      @media (min-width: $mobile-breakpoint)
        padding: $spacing_layout--md

  .field--name-field-image .field__item
    display flex

  .field--name-field-image img
    max-width: 100%
    max-height: 100%
    object-fit: cover

    @media (min-width: $mobile-breakpoint)
      object-fit unset
      width 100%
      height auto
