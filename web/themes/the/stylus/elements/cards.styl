@require 'vars'
@require 'mq'

ul.cards

  margin 0 auto !important
  width 100%
  padding-left 4px

  @media $mq_up_xl
    display grid
    grid-template-columns: repeat(4, 1fr);
    gap 20px

  li
    display inline-block
    border 1px solid black
    width calc(50% - 10px)
    box-sizing border-box
    margin 0 5px 10px 0

    h4
        padding 0 0 3px 7px

    @media $mq_up_lxl
      width 300px

    img
      max-width 100%
      height auto
      width 100%

