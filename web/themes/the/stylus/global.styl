@require 'vars'

.layout-container
  *
    font-family: $font_20th, Arial, Helvetica, sans-serif;
    box-sizing border-box
    line-height 1.5em
    font-size 1em;

  h1, h2, h3, h4, h5, h6
    margin 0
    padding 0

  h1, h2, h3, h4, h5, h6, nav li a
    letter-spacing 1px


  h1, h2, h3, h4, h5, h6
    margin 0
    padding 0

  a
    &:link, &:visited
      color: inherit
      text-decoration none

  button
    &:hover
      cursor pointer

  p
    margin 0 0 $spacing_layout--sm 0

  small, small.small-text
    font-size 80%

