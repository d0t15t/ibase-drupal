{{ attach_library('the/artists_overview') }}

{% if title %}
  <h3>{{ title }}</h3>
{% endif %}

<ul{{ create_attribute().addClass('cards', 'artists', 'border-grid') }}>
{% for row in rows %}
  {%
    set row_classes = [
      default_row_class ? 'views-row',
    ]
  %}
  <li{{ row.attributes.addClass(row_classes) }}>
    {{- row.content -}}
  </li>
{% endfor %}
</ul>