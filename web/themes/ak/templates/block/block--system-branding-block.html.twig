{% if site_logo %}
  <a href="{{ path('<front>') }}" rel="home" class="site-logo">
    <img src="{{ site_logo }}" alt="{{ 'Home'|t }}" />
  </a>
{% endif %}
{% if site_name %}
  {% if is_frontpage %}
      <h1>{{ site_name }}</h1>
    {% else %}
      <h2>
        <a href="{{ path('<front>') }}" rel="home">{{ site_name }}</a>
      </h2>
    {% endif %}
{% endif %}
{% if site_slogan and is_frontpage %}
  <h2 class="site-slogan">{{ site_slogan }}</h2>
{% endif %}
