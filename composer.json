{
    "name": "drupal/recommended-project",
    "description": "Project template for Drupal 8 projects with a relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "cmcdonaldca/ohShopify.php",
                "version": "1.0",
                "type":"drupal-library",
                "source": {
                    "url": "https://github.com/cmcdonaldca/ohShopify.php.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "enyo/dropzone",
                "version": "v5.7.2",
                "type":"drupal-library",
                "source": {
                    "url": "https://github.com/enyo/dropzone.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "harvesthq/chosen",
                "version": "v1.8.7",
                "type":"drupal-library",
                "source": {
                    "url": "https://github.com/harvesthq/chosen.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "cmcdonaldca/ohshopify.php": "^1.0",
        "composer/installers": "^1.7",
        "cweagans/composer-patches": "~1.0",
        "donutdan4114/shopify": "^2020.01",
        "drupal/address": "~1.0",
        "drupal/admin_toolbar": "^2.3",
        "drupal/adminimal_theme": "^1.6",
        "drupal/asset_injector": "^2.7",
        "drupal/backup_migrate": "5.0.0-rc2",
        "drupal/build_hooks": "^2.4",
        "drupal/chosen": "^3.0",
        "drupal/color_field": "^2.3",
        "drupal/conditional_fields": "^1.0@alpha",
        "drupal/console": "~1.0",
        "drupal/core-composer-scaffold": "^9",
        "drupal/core-project-message": "^9",
        "drupal/core-recommended": "^9.1",
        "drupal/devel_entity_updates": "^3.0",
        "drupal/dropzonejs": "2.x-dev",
        "drupal/entity_browser": "^2.5",
        "drupal/field_group": "^3.1",
        "drupal/gatsby": "^1.0@RC",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/jsonapi_extras": "^3.15",
        "drupal/jsonapi_menu_items": "^1.1",
        "drupal/metatag": "^1.15",
        "drupal/paragraphs": "^1.12",
        "drupal/pathauto": "^1.8",
        "drupal/redirect": "^1.6",
        "drupal/restui": "^1.18",
        "drupal/shopify": "^1.0@alpha",
        "drupal/simple_oauth": "^5.0",
        "drupal/taxonomy_menu_ui": "^1.4",
        "drush/drush": "^10.3",
        "enyo/dropzone": "^5.7",
        "harvesthq/chosen": "^1.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/recommended-project template!          </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        }
    },
    "patches": {
        "drupal/shopify": {
            "Add custom fields": "./web/modules/patches/shopify/custom_field_patch.patch"
        }
    }
}
